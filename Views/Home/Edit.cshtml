@model 業務報告システム.Models.ApplicationUser;

@{
}
<h1>User Edit</h1>

@if (User.IsInRole("Admin"))
{

    <div class="row">
        <div class="col-md-4">
            <form method="post" action="">
                <h2>Edit account.</h2>
                <hr />
                @* <div asp-validation-summary="ModelOnly" class="text-danger"></div> *@
                <div class="form-floating">
                    <input name="values" class="form-control" aria-required="true" value="@Model.LastName"/>
                    <label>LastName</label>
                    @* <span asp-validation-for="Input.LastName" class="text-danger"></span> *@
                </div>
                <div class="form-floating">
                    <input name="values" class="form-control" aria-required="true" value="@Model.FirstName" />
                    <label>FirstName</label>
                    @* <span asp-validation-for="Input.FirstName" class="text-danger"></span> *@
                </div>
                @* <div asp-validation-summary="ModelOnly" class="text-danger"></div> *@
                <div class="form-floating">
                    <input name="values" type="email" class="form-control" autocomplete="username" aria-required="true" value="@Model.Email" />
                    <label >Email</label>
                    @* <span asp-validation-for="Input.Email" class="text-danger"></span> *@
                </div>
                <select name="values" class="form-control" aria-required="true">
                    @switch (Model.Role)
                    {
                    case "Member":
                            <option selected>Member</option>
                            <option>Manager</option>
                            break;
                        case "Manager":
                            <option>Member</option>
                            <option selected>Manager</option>
                            break;
                    }
                </select>
                <div class="form-group">
                    <label class="control-label">Project</label>
                    <select class="form-control" asp-items="ViewBag.Projects" name="values"></select>
                </div>
                <input type="hidden" name="values" value="@Model.Role"/>
               @*  <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                    <label asp-for="Input.Password"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                    <label asp-for="Input.ConfirmPassword"></label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div> *@
                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
            </form>
        </div>
    </div>

}
else
{
    <h1>アクセス権がありません。</h1>

}