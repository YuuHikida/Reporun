@model 業務報告システム.Models.Project;

@{
}



@if (TempData["AlertProjectCreate"] != null)
{
    <div class="alert alert-success alert-dismissable fade show m-1" role="alert">
        @TempData["AlertProjectCreate"]
        <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["AlertProjectError"] != null)
{
    <div class="alert alert-danger alert-dismissable fade show m-1" role="alert">
        @TempData["AlertProjectError"]
        <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<div class="container-uindex">
<h1 class="text-center">プロジェクト作成</h1>

<div class="container-form">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">プロジェクト名</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="作成" class="w-100 btn btn-lg btn-warning" />
            </div>
        </form>
        <a asp-action="Index">プロジェクト一覧に戻る</a>
    </div>
</div>